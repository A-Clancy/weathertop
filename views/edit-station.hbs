<form class="box" action="/station/{{station._id}}/update" method="POST">
  <h1 class="title">{{title}}</h1>
  <div class="field">
    <label class="label">Station Name</label>
    <div class="control">
      <input class="input" type="text" name="title" value="{{station.title}}" required>
    </div>
  </div>
  <div class="field">
    <label class="label">Latitude</label>
    <div class="control">
      <input class="input" type="text" name="latitude" value="{{station.latitude}}">
    </div>
  </div>
  <div class="field">
    <label class="label">Longitude</label>
    <div class="control">
      <input class="input" type="text" name="longitude" value="{{station.longitude}}">
    </div>
  </div>
  <div class="control">
    <button class="button is-primary">Save Changes</button>
  </div>
</form>